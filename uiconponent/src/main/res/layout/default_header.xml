<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="#eee"
    >

    <ImageView
        android:id="@+id/f_default_progress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/stat_notify_sync"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:tint="#666666"
        android:layout_toLeftOf="@+id/f_default_center"
        android:layout_toStartOf="@+id/f_default_center"
        />

    <LinearLayout
        android:id="@+id/f_default_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/f_default_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pull Down To Refresh"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/f_default_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Last Updata Time"
            />

    </LinearLayout>

</RelativeLayout>
