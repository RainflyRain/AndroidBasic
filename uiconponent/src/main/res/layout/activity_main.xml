<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uiconponent.MainActivity">

    <androidx.slidingpanelayout.widget.SlidingPaneLayout
        android:id="@+id/spl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <!--    menu    -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/holo_orange_light"
            />

        <!--   content     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="SlideMenu"
                android:textAllCaps="false"
                android:onClick="onClickView"
                />

            <Button
                android:id="@+id/btn_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                android:text="ListActivity"
                android:textAllCaps="false"
                android:onClick="onClickView"
                />

            <com.example.uiconponent.refresh.FRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_purple"
                >

                <com.example.uiconponent.refresh.FDefaultHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:paddingBottom="100dp"
                    android:background="@color/colorAccent"
                    android:text="content"
                    android:gravity="center"
                    />

            </com.example.uiconponent.refresh.FRefreshLayout>


        </LinearLayout>

    </androidx.slidingpanelayout.widget.SlidingPaneLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
